@model ITI_MVC_Assingment_D2.Models.Instructor

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Data Entry Form</title>
    <style>
        /* Basic CSS for styling the form */
        body {
            font-family: Arial, sans-serif;
            background-color: #f4f4f4;
            margin: 0;
            padding: 20px;
        }

        .form-container {
            background-color: #fff;
            padding: 20px;
            margin: auto;
            width: 50%;
            box-shadow: 0px 0px 10px 0px rgba(0, 0, 0, 0.1);
            border-radius: 8px;
        }

        .form-group {
            margin-bottom: 15px;
        }

            .form-group label {
                display: block;
                font-weight: bold;
                margin-bottom: 5px;
            }

            .form-group input, .form-group select {
                width: 100%;
                padding: 10px;
                border: 1px solid #ccc;
                border-radius: 4px;
                font-size: 16px;
            }

                .form-group input[type="text"], .form-group input[type="number"] {
                    height: 40px;
                }

            .form-group select {
                height: 45px;
            }

        .btn-submit {
            background-color: #007bff;
            color: white;
            padding: 10px 20px;
            border: none;
            border-radius: 4px;
            font-size: 16px;
            cursor: pointer;
        }

            .btn-submit:hover {
                background-color: #0056b3;
            }
    </style>
</head>
<body>

    <div class="form-container">
        <form action="/Instructors/SaveEditedInstructor/@Model.Id" method="post">
            <div class="form-group">
                <label for="Name">Name:</label>
                <input type="text" id="Name" name="Name" value="@Model.Name" required>
            </div>
            <div class="form-group">
                <label for="Address">Address:</label>
                <input type="text" id="Address" name="Address" value="@Model.Address" required>
            </div>
            <div class="form-group">
                <label for="Img">Image:</label>
                <input type="text" id="Img" name="Img" value="@Model.Img" required>
            </div>
            <div class="form-group">
                <label for="Salary">Salary:</label>
                <input type="number" id="Salary" name="Salary" value="@Model.Salary" required>
            </div>
            <div class="form-group">
                <label for="department">Department:</label>
                <select id="Dept_id" name="Dept_id" required>
                    @foreach (var dept in ViewBag.Departments)
                    {
                        if(dept.Id == Model.Dept_id)
						{
							<option value="@dept.Id" selected>@dept.Name</option>
						}
						else
						{
							<option value="@dept.Id"> select @dept.Name</option>
						}
                        
                    }
                </select>

            </div>
            <div class="form-group">
                <label for="course">Course:</label>
                <select id="Crs_id" name="Crs_id" required>
                    @foreach (var Course in ViewBag.Courses)
                    {
                        if(Course.Id == Model.Crs_id)
                        {
                            <option value="@Course.Id" selected>@Course.Name</option>
						}
						else
						{
							<option value="@Course.Id">@Course.Name</option>
						}
                    }
                </select>
            </div>
            <button type="save" class="btn-submit">Save Changes</button>
        </form>
    </div>

</body>
</html>
